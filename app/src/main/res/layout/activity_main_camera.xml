<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#717171"
    tools:context="dakrory.a7med.cargomarine.CameraActivity">








    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgView">

        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="185px"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/connectToWifi"
                android:layout_width="150px"
                android:layout_height="150px"
                android:scaleType="centerCrop"
                android:background="#00FFFFFF"
                android:layout_marginTop="15px"
                android:layout_marginLeft="15px"
                android:src="@mipmap/theta">

            </ImageButton>
            <TextView
                android:id="@+id/notifyHint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="45px"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/HintForOpenWifi">

            </TextView>
        </LinearLayout>


        <ImageButton
            android:id="@+id/capture"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15px"
            android:layout_marginRight="50px"
            android:layout_marginBottom="50px"
            android:src="@mipmap/cap" />

        <ImageButton
            android:id="@+id/startLive"
            android:layout_width="150px"

            android:layout_height="150px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15px"
            android:layout_marginLeft="50px"
            android:layout_marginBottom="50px"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            android:src="@mipmap/live" />
    </RelativeLayout>


</LinearLayout>